<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008B8B"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/border"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/app_usage"
                android:textColor="#A52A2A"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/nameEditText"
                android:hint="Name"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                android:background="#c5ccd3"
                android:layout_marginTop="10dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toppings"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textColor="#dea821"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whippedCreamCheckBox"
        android:text="Whipped Cream"
        android:textColor="#CCC9C9"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chocolateCheckBox"
        android:text="Chocolate"
        android:textColor="#CCC9C9"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingLeft="10dp"/>

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantity"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textColor="#dea821"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
        >

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:onClick="decrement"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="23sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/quantity_text_view"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:onClick="increment"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textAllCaps="true"
        android:textSize="27sp"
        android:textColor="#dea821"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textSize="23sp"
        android:textColor="#000000"
        android:id="@+id/price_text_view"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="order"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:onClick="submitOrder"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Free Coffe"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="freeCoffe"
            />

</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="sendDetailsByEmail"
        android:text="Send Email"
        android:textSize="12sp" />

</LinearLayout>
</LinearLayout>
</LinearLayout>
</RelativeLayout>